# Example environment variables for Newspaper Emailer (Simplified)
# Copy to .env and fill in values

# Newspaper
NEWSPAPER_URL=https://example.com
NEWSPAPER_DOWNLOAD_PATH_PATTERN=newspaper/download/{date}

# Storage (S3-compatible)
STORAGE_ENDPOINT_URL=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
STORAGE_ACCESS_KEY_ID=your-access-key-id
STORAGE_SECRET_ACCESS_KEY=your-secret-access-key
STORAGE_REGION=auto
STORAGE_BUCKET=newspaper-storage

# Email (SMTP)
EMAIL_SENDER=sender@example.com
EMAIL_RECIPIENTS=you@example.com
EMAIL_SUBJECT_TEMPLATE=Your Daily Newspaper - {{ date }}
EMAIL_TEMPLATE=email_template.html
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=user
EMAIL_SMTP_PASS=pass
EMAIL_SMTP_TLS=1
EMAIL_ALERT_RECIPIENT=admin@example.com

# Paths
PATHS_DOWNLOAD_DIR=downloads
PATHS_TEMPLATE_DIR=templates
PATHS_LOG_FILE=newspaper_emailer.log
PATHS_STATUS_FILE=pipeline_status.json